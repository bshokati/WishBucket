<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WBListFragment" >
    
     <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:id="@+id/addWishButton2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:onClick="addNewWish"
        android:background="@drawable/addwish"
        android:src="@drawable/addwish"
        android:layout_alignParentBottom="true"
     />
 

    <ExpandableListView
        android:id="@android:id/list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/addWishButton2"
        android:layout_alignParentTop="true" >
    </ExpandableListView>
    
    <TextView 
       	android:id="@+id/wish_instructions"
       	android:layout_width="wrap_content"
       	android:layout_height="wrap_content"
       	android:text="@string/wish_instructions" 
       	android:visibility="gone"
       	android:layout_gravity="center"
       	android:layout_marginTop="8dp"
       	android:layout_marginBottom="8dp"
       	android:textColor="#000000"
       	android:layout_above="@id/addWishButton2"
       	android:layout_centerHorizontal="true" />

</RelativeLayout>
